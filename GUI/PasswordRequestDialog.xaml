<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="susi_gui_windows.GUI.PasswordRequestDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:susi_gui_windows.GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{x:Bind Title}"
    DefaultButton="Primary"
    PrimaryButtonText="{x:Bind PrimaryButtonText}"
    CloseButtonText="Cancel"
    PrimaryButtonClick="Dialog_PrimaryButtonClick"
    CloseButtonClick="Dialog_CloseButtonClick"
    PrimaryButtonCommandParameter="{x:Bind passwordTextbox.Password, Mode=OneWay}">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBlock Text="We need to a password for the following file:" />
        <Grid Margin="0, 10, 0, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32px" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image
                Width="32px"
                Height="32px"
                Grid.Column="0"
                Margin="0, 0, 5, 0"
                Source="{x:Bind targetFile.FileIcon}" />
            <StackPanel
                Grid.Column="1"
                Orientation="Vertical"
                HorizontalAlignment="Stretch"
                Margin="5, 0, 0, 0">
                <TextBlock
                    Text="{x:Bind targetFile.FileName}"
                    FontSize="15"
                    VerticalAlignment="Center"
                    TextWrapping="NoWrap"
                    TextTrimming="CharacterEllipsis">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind targetFile.FileName}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock
                    Text="{x:Bind targetFile.FilePath}"
                    FontSize="11"
                    FontWeight="ExtraLight"
                    VerticalAlignment="Center"
                    TextWrapping="NoWrap"
                    TextTrimming="CharacterEllipsis">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind targetFile.FilePath}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
            </StackPanel>
        </Grid>
        <PasswordBox
            Name="passwordTextbox"
            Header="Password"
            IsPasswordRevealButtonEnabled="True"
            PasswordChanged="PasswordTextbox_PasswordChanged" />
        <InfoBar x:Name="passwordErrorInfoBar" Severity="Error" IsOpen="False" IsClosable="False" />
        <StackPanel Name="confirmPasswordBox">
            <PasswordBox
                Name="confirmPasswordTextbox"
                Header="Confirm Password"
                IsPasswordRevealButtonEnabled="True"
                Margin="0, 10, 0, 5"
                PasswordChanged="ConfirmPasswordTextbox_PasswordChanged" />
            <InfoBar x:Name="confirmPasswordErrorInfoBar" Severity="Error" IsOpen="False" IsClosable="False" />
        </StackPanel>
    </StackPanel>
</ContentDialog>
